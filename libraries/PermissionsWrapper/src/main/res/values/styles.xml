<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="RationalDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog">
        <!-- alert dialog style-->
        <item name="alertDialogTheme" tools:ignore="DuplicateDefinition">@style/AlertDialogStyle</item>
        <item name="alertDialogTheme" tools:ignore="DuplicateDefinition">@style/AlertDialogStyle</item>
    </style>

    <style name="PermissionRequestActv" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <!--Alert Dialogs-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <!-- Used for the background -->
        <item name="background">@android:color/white</item>

        <item name="android:windowTitleStyle">@style/AlertDialogTitleTextStyle</item>
    </style>

    <style name="AlertDialogTitleTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>
    <!--Alert Dialogs-->

</resources>